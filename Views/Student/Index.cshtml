@using StudentCommon
@model IEnumerable<StudentObjects.Student>
@{
    ViewBag.Title = "List of all Students";
}
<h2>List of all Students</h2>
<table style="padding: 10px; font-size: 16px;" cellpadding="10px" cellspacing="15px">
    <tr>
        <th>First Name
        </th>
        <th>Last Name
        </th>

    </tr>
    @{
        if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit","Update","Student",new { id = item.StudentId.EncryptNumber() }, null)
            </td>
        </tr>
            }
        }
    }
</table>
@Html.ActionLink("Add Student","Add")